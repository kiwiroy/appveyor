use alienfile;

probe sub { 'share'; };

share {
  plugin 'Fetch::Local' => (
    url => 'dist-1.0.0.tar.gz',
  );

  plugin Extract => 'tar.gz';

  plugin 'Build::MSYS';

  build [
    'sh config -v -t --prefix=/tmp',
    '%{make}',
    'set',
    'where perl',
    'pacman -Qo /usr/bin/perl',

  ];
};
